COMPOSE_PROJECT_NAME=speech-gateway

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

SPGW_DB_NAME=speech_gateway
SPGW_DB_USER=spgw-runtime
SPGW_DB_PASSWORD=spgw-runtime-password

# Port settings
PORT_SPGW=18000
PORT_DB=5432
PORT_PGADMIN=18001

# PgAdmin settings
PGADMIN_USER=pgadmin@example.com
PGADMIN_PASSWORD=pgadmin-password


# Application settings
DEBUG=true

# Service enable/disable flags
AZURE_ENABLED=true
OPENAI_ENABLED=true
VOICEVOX_ENABLED=false
SBV2_ENABLED=false
NIJIVOICE_ENABLED=false

# Azure TTS
AZURE_API_KEY=
AZURE_REGION=
# AZURE_LANGUAGES=en-US,zh-CN,fr-FR

# OpenAI TTS
OPENAI_API_KEY=
# OPENAI_LANGUAGES=ja-JP,es-ES

# VOICEVOX
VOICEVOX_URL=http://voicevox-host:50021
# VOICEVOX_LANGUAGES=ja-JP

# Style-Bert-VITS2
SBV2_URL==http://sbv2-host:5000
# SBV2_LANGUAGES=ja-JP

# NIJIVOICE
NIJIVOICE_API_KEY=
# NIJIVOICE_LANGUAGES=ja-JP

# Data storage path (for external disk mounting)
# Examples:
#   DATA_PATH=./data                    # Local directory (default)
#   DATA_PATH=/mnt/external-disk/spgw   # External disk
DATA_PATH=./data
